{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "./main",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "verbatimModuleSyntax": false
    },
    "include": [
        "main/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}