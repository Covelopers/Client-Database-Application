{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "description": "Client database desktop application built with Next.js + RxDB + Electron",
  "author": "Your Name <youremail@example.com>",
  "main": "main/index.js",
  "scripts": {
    "build": "next build",
    "check": "next lint && tsc --noEmit",
    "db:generate": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "dev": "next dev",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "postinstall": "prisma generate",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "electron:compile": "tsc --project tsconfig.electron.json",
    "electron:compile:watch": "tsc --project tsconfig.electron.json --watch",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron:compile:watch\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "tsc --project tsconfig.electron.json && npm run build && electron-builder",
    "dist": "tsc --project tsconfig.electron.json && npm run build && electron-builder --win --x64",
    "dist:mac": "tsc --project tsconfig.electron.json && npm run build && electron-builder --mac",
    "dist:linux": "tsc --project tsconfig.electron.json && npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@t3-oss/env-nextjs": "^0.12.0",
    "better-sqlite3": "^11.0.0",
    "next": "14.2.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rxdb": "^15.21.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^30.0.0",
    "@types/jest-json-schema": "^6.1.4",
    "@types/node": "^20.14.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitest/coverage-c8": "^0.33.0",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.23.0",
    "eslint-config-next": "^15.2.3",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "prettier": "^3.5.3",
    "prisma": "^6.17.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "vitest": "^0.33.0",
    "wait-on": "^7.2.0"
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  },
  "packageManager": "npm@11.6.0",
  "build": {
    "appId": "com.yourcompany.ClientDatabaseApp",
    "productName": "Client Database App",
    "asar": true,
    "asarUnpack": [
      ".next/standalone/**",
      ".next/static/**",
      "node_modules/.prisma/**",
      "node_modules/@prisma/client/**",
      "node_modules/better-sqlite3/**"
    ],
    "files": [
      "main/**/*",
      ".next/**/*",
      "public/**/*",
      "node_modules/**/*",
      "prisma/**/*",
      "package.json",
      "next.config.js",
      "!prisma/migrations",
      "!.env",
      "!.env.local",
      "!.env.production"
    ],
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "prisma/app.db",
        "to": "app.db"
      }
    ],
    "win": {
      "target": "portable",
      "sign": null
    }
  },
  "optionalDependencies": {
    "@next/swc-win32-x64-msvc": "^15.5.6"
  }
}